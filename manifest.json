{
  "manifest_version": 2,

  "name": "Peekr",
  "description": "Preview any link in an iframe. Like a boss!",
  "version": "0.0",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "GPeeker - click for instructions"
  },
  "permissions": [
    "tabs", "webRequest", "webRequestBlocking", "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "js": ["peekr.js"]
    }
  ]
}